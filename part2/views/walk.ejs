<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Walker Dashboard - Dog Walking Service</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-4">
    <h1 class="mb-4 text-success">Walker Dashboard</h1>

    <!-- Alert messages -->
    <% if (message) { %>
      <div class="alert alert-info"><%= message %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <!-- Walk requests list -->
    <% if (walks && walks.length > 0) { %>
      <div class="row">
        <% walks.forEach(function(walk) { %>
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Walk for <%= walk.dog_name %> (<%= walk.size %>)</h5>
                <p class="card-text">
                  <strong>Date:</strong> <%= new Date(walk.requested_time).toLocaleString() %><br>
                  <strong>Duration:</strong> <%= walk.duration_minutes %> minutes<br>
                  <strong>Location:</strong> <%= walk.location %><br>
                  <strong>Owner:</strong> <%= walk.owner_name %>
                </p>
                <form method="POST" action="/walks/<%= walk.request_id %>/apply">
                  <input type="hidden" name="walker_id" value="<%= walkerId %>">
                  <button type="submit" class="btn btn-outline-success">Apply</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No available walk requests at the moment.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>